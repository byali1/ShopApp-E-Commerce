@model LoginModel

@{
    ViewData["Title"] = "Login";
}

@section Scripts{
    @*Sayfa refresh olmadan validation'ın yapılması için*@
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}


    <div class="row justify-content-center">
        <div class="text-center col-md-6">
            <h1 class="text-center"><i class="bi bi-person-check-fill text-success"></i> Üye Girişi</h1>
            <hr />

            <div class="row justify-content-center">
                <div class="col-md-10">

                    @if (ViewBag.ErrorMessage != null)
                {
                    <div class="row text-center mb-3">
                        <div class="text-danger"><i class="bi bi-x-circle-fill text-danger"></i> @ViewBag.ErrorMessage</div>
                    </div>
                }
                
                
                <form asp-controller="Account" asp-action="Login" method="post" class="d-grid gap-4">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                    <div class="form-group row">
                        <label asp-for="Email" class="col-md-3 col-form-label">E-mail</label>
                        <div class="col-md-9">
                            <input asp-for="Email" value="@Model.Email" class="form-control" />
                            @*<span asp-validation-for="Username" class="text-danger"></span>*@
                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="Password" class="col-md-3 col-form-label">Şifre</label>
                        <div class="col-md-9">
                            <input class="form-control" asp-for="Password" value="@Model.Password" />
                            @*<span asp-validation-for="Password" class="text-danger"></span>*@
                        </div>
                    </div>
                    
                    <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none text-primary">Şifremi Unuttum</a>

                    <div class="form-group row justify-content-center">
                        <div class="d-grid col-5 mx-auto">
                            <button type="submit" class="btn btn-success mt-4">Giriş yap</button>
                        </div>
                    </div>
                    


                </form>

            </div>

            @*<div class="col-md-6">

            </div>*@
        </div>
    </div>
</div>


