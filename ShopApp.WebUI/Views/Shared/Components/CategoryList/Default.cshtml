@model CategoryListViewModel


<div class="list-group">

    @foreach (var item in Model.Categories)
    {
        <a
            asp-controller="Shop"
            asp-action="List"
            asp-route-category="@item.Name.ToLower()"
            id="kategoriTablo"
            class="list-group-item list-group-item-action @(Model.SelectedCategory==item.Name.ToLower()?"siyah":"")">
            @item.Name
        </a>
    }

</div>