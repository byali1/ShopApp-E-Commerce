@model ResultMessage


<div class="row justify-content-center ">

    <div class="w-50">
        <div class="alert alert-@Model.Css alert-dismissible fade show " role="alert">
            <strong class="alert-title fs-5">@Model.Title </strong>
            <p class="mt-2">@Model.Message</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

</div>