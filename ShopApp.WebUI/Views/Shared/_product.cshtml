@model Product


<div class="col-md-4">
    <div class="card mb-4">
        <img src="/img/@Model.ImageUrl" alt="@Model.Name">
        <div class="card-body">
            <h4 class="card-title">
                <a href="#" class="text-decoration-none text-dark">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fa-solid fa-turkish-lira-sign"></i> @Model.Price
            </small>
            
            <div class="card-footer text-center mt-2">
                <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Detaylar</a>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display: inline">
                        <input type="hidden" name="productId" value="@Model.Id"/>
                        <input type="hidden" name="quantity" value="1"/>
                        <button type="submit" class="btn btn-dark btn-sm ms-3">Sepete Ekle</button>
                    </form>
                    
                }
            </div>
        </div>
    </div>
</div>