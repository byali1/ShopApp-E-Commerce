@model List<OrderListModel>

@{
    ViewData["Title"] = "GetOrders";
}

<h1>Siparişlerim</h1>

@foreach (var order in Model)
{
    <table class="table table-striped table-border table-sm mb-3">
        <thead>
            <tr class="table-dark">
                <td colspan="2">Sipariş No: #@order.OrderNumber</td>
                <td>Birim Fiyat</td>
                <td>Adet</td>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
                <tr>
                    <td>
                        <img src="~/img/@orderItem.ImageUrl" width="80" />
                    </td>
                    <td>@orderItem.Name</td>
                    <td>@orderItem.Price</td>
                    <td>@orderItem.Quantity</td>
                    
                </tr>
            }
        </tbody>


    </table>

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="border border-start-0 bg-warning p-2 text-dark bg-opacity-10">
                <p class="text-center fw-bold">Sipariş Detayları</p>
                <p class="text-muted text-center fw-light fs-6">@order.OrderDate</p>
                <p><strong>Alıcı:</strong> @order.FirstName @order.LastName</p>
                <p><strong>Adres:</strong> @order.Address</p>
                <p><strong>Telefon:</strong> @order.Phone</p>
                <p><strong>E-mail:</strong> @order.Email</p>
                <p><strong>Ödeme Tipi:</strong> @order.PaymentTypes</p>
                <p><strong>Toplam Ödenen:</strong> @order.TotalPrice()</p>
            </div>
        </div>
    </div>
}
