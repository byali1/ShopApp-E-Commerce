@model CategoryModel

@{
    ViewData["Title"] = "CreateCategory";
}

<div class="row">
    <div class="col-md-6">
        <h1 class="text-center"><i class="bi bi-check-circle-fill text-primary"></i> Kategori Ekleme </h1>
        <hr/>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post" class="d-grid gap-4">
            
                <div class="form-group row">
                    <label asp-for="Name" class="col-md-3 col-form-label">Kategori adı</label>
                    <div class="col-md-9">
                        <input class="form-control" asp-for="Name" />
                    </div>
                </div>
            
                <div class="form-group row">
                    <div class="d-grid col-5 mx-auto">
                        <button type="submit" class="btn btn-primary mt-4 ">Ekle</button>
                    </div>
                </div>
            
            
        </form>
       
    </div>
    
    <div class="col-md-6">

    </div>
</div>