@model ProductModel

@{
    ViewData["Title"] = "CreateProduct";
}


@section Scripts{
    @*Sayfa refresh olmadan validation'ın yapılması için*@
   <script src=" https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" ></script>
   <script src=" https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" ></script>
    <script src="https://cdn.ckeditor.com/4.19.1/standard/ckeditor.js"></script>


    <script>
        CKEDITOR.replace("editor");
    </script>

}
<div class="row">
    <div class="col-md-6">
        <h1 class="text-center"><i class="bi bi-check-circle-fill text-success"></i> Ürün Ekleme </h1>
        <hr/>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="row text-center mb-3">
                <div class="text-danger"><i class="bi bi-x-circle-fill text-danger" ></i> @ViewBag.ErrorMessage</div>
            </div>
        }

        
        <form asp-controller="Admin" asp-action="CreateProduct" method="post" class="d-grid gap-4">

            <div class="form-group row">
                <label asp-for="Name" class="col-md-3 col-form-label">Ürün adı</label>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Name" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span> @*Modelin Name alanı ile ilişkili*@
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-3 col-form-label">Fotoğraf URL</label>
                <div class="col-md-9">
                    <input class="form-control" asp-for="ImageUrl" value="@Model.ImageUrl"/>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-md-3 col-form-label">Ürün açıklaması</label>
                <div class="col-md-9">
                    <textarea id="editor" asp-for="Description" class="form-control"> value="@Model.Description"</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Price" class="col-md-3 col-form-label">Fiyat</label>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Price" value="@Model.Price"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="d-grid col-5 mx-auto">
                    <button type="submit" class="btn btn-success mt-4 ">Ekle</button>
                </div>
            </div>


        </form>

    </div>
    
    <div class="col-md-6">

    </div>
</div>